<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InteractWithUsers"
    >

    <FrameLayout
        android:id="@+id/UserInteractFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp">

    </FrameLayout>

    <Button
        android:id="@+id/prev_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/gray"
        android:text="Back" />

    <Button
        android:id="@+id/next_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/green"
        android:text="Next" />

    <Button
        android:id="@+id/filter_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/black"
        android:text="Filter Users" />

    <Button
        android:id="@+id/search_users_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/black"
        android:text="Search Users" />
</RelativeLayout>